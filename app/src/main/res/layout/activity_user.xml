<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.miquelynhollingsworth.journaling.UserActivity">

    <TextView
        android:text="Welcome User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_welcome"
        android:textAppearance="@style/MediumText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_logout"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignBaseline="@+id/tv_welcome"
        android:layout_alignBottom="@+id/tv_welcome"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Previous Entries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_oldEntries"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="169dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="OldEntriesButton" />

    <Button
        android:text="New Entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_newEntry"
        android:elevation="24dp"
        android:layout_marginBottom="53dp"
        android:layout_above="@+id/b_oldEntries"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="NewEntryButton" />

</RelativeLayout>
